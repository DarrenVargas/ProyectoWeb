@using Proyecto.Domain.InputModels.Usuarios;
@model NuevoUsuario
@{
    ViewData["Title"] = "Añadir Usuario";
}

<div class="container-fluid" style="max-width: 924px;">
    <div class="row">
        <div class="col-12">
            <h1><i class="fa-solid fa-person-circle-plus"></i> Add Clientes</h1>
        </div>
    </div>
    <form method="post">
        <fieldset>
            <div class="table">
                <div class="row">
                    <div class="col-12 text-danger form-text" asp-validation-summary="ModelOnly"></div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <label asp-for="@Model.NombreUsuario" class="form-label"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="@Model.NombreUsuario" class="form-control">
                        <span asp-validation-for="@Model.NombreUsuario" class="text-danger form-text"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <label asp-for="@Model.PasswordUsuario" class="form-label"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="@Model.PasswordUsuario" type="password" class="form-control">
                        <span asp-validation-for="@Model.PasswordUsuario" class="text-danger form-text"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <label asp-for="@Model.IdPersona" class="form-label"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="@Model.IdPersona" class="form-control">
                        <span asp-validation-for="@Model.IdPersona" class="text-danger form-text"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <label asp-for="@Model.IsAdmin" class="form-label"></label>
                    </div>
                    <div class="col-9">
                        <div class="form-check">
                            <input asp-for="@Model.IsAdmin" type="checkbox" class="form-check-input">
                            <label class="form-check-label" asp-for="@Model.IsAdmin">Es Administrador</label>
                        </div>
                        <span asp-validation-for="@Model.IsAdmin" class="text-danger form-text"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <button type="submit" class="btn btn-outline-success"><i class="fa-solid fa-user-shield"></i>Agregar</button>
                    <a asp-asp-controller="Clientes" asp-action="Index" class="btn btn-outline-danger">Cancelar</a>
                </div>
            </div>
        </fieldset>
    </form>
</div>